{
  "name": "typescript-starter",
  "author": "Vinícius França Lima Vilaça",
  "keywords": [],
  "license": "ISC",
  "version": "1.0.0",
  "description": "A base node-typescript server project.",
  "main": "index.js",
  "scripts": {
    "docker-start:dev": "docker run --name server-ntp -d -p 9900:9000 --env-file .env.dev server-ntp",
    "docker-start:prod": "docker run --name server-ntp -d -p 9900:9000 --env-file .env.prod server-ntp",
    "docker-build": "docker build -t server-ntp .",
    "build": "rimraf ./build && tsc",
    "start:dev": "env $(cat .env.dev) nodemon",
    "start": "npm run build && node -r dotenv/config build/index.js dotenv_config_path=.env.prod",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "npm run prettier-format && npm run lint && jest",
    "test:dev": "jest --watchAll",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^26.5.3",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-jest": "^26.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
